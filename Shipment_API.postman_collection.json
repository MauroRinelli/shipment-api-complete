{
  "info": {
    "name": "Shipment API - Solespress",
    "description": "Collection completa per testing API Gestione Spedizioni",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api/shipments",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/ping",
          "host": ["{{base_url}}"],
          "path": ["ping"]
        }
      }
    },
    {
      "name": "2. Crea Spedizione",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"trackingNumber\": \"TRK001\",\n  \"destination\": {\n    \"city\": \"Pontedera\",\n    \"country\": \"Italia\"\n  },\n  \"carrier\": \"BRT\",\n  \"status\": \"PENDING\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "3. Lista Tutte Spedizioni",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "4. Dettaglio Spedizione",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/TRK001",
          "host": ["{{base_url}}"],
          "path": ["TRK001"]
        }
      }
    },
    {
      "name": "5. Aggiorna Stato",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"IN_TRANSIT\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/TRK001",
          "host": ["{{base_url}}"],
          "path": ["TRK001"]
        }
      }
    },
    {
      "name": "6. Elimina Spedizione",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/TRK001",
          "host": ["{{base_url}}"],
          "path": ["TRK001"]
        }
      }
    },
    {
      "name": "Test: Crea Spedizione Invalida",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"trackingNumber\": \"TRK002\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Test: Aggiorna Status Invalido",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"INVALID_STATUS\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/TRK001",
          "host": ["{{base_url}}"],
          "path": ["TRK001"]
        }
      }
    }
  ]
}
